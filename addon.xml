<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.megathek" name="Magenta TV Megathek (TEST)" version="0.2.6" provider-name="Jan-Luca Neumann">
  <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.requests"/>
      <import addon="inputstream.adaptive"/>
      <import addon="script.module.beautifulsoup4"/>
      <import addon="script.module.xmltodict"/>
      <import addon="script.module.tzlocal"/>
  </requires>
   <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Magenta TV Megathek</summary>
    <description lang="en_GB">Video addon providing access to Megathek VoD content.</description>
    <description lang="de_DE">Video-Addon zur Wiedergabe der VoD-Inhalte aus der Megathek.</description>
    <disclaimer lang="en_GB">Widevine is required to watch the streams.</disclaimer>
    <disclaimer lang="de_DE">Widevine wird für das Abspielen der Streams benötigt.</disclaimer>
    <platform>all</platform>
    <license>GPL-3.0-or-later</license>
    <website>https://web.magentatv.de</website>
    <email>sunsettrack4@gmail.com</email>
    <source>http://github.com/sunsettrack4/plugin.video.megathek</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
